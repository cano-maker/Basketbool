@model Basketbool.Web.Data.Entities.MatchDayEntity

@{
    ViewData["Title"] = "Details";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">
<br />

<h2>Details</h2>

<div>
    <h4>MatchDay</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    Number of Teams
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.MatchDayDetails.Count)
                </dd>
                <dt>
                    Number of Matches
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Matches.Count)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="EditMatchDay" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
    <a asp-action="AddMatchDayDetail" asp-route-id="@Model.Id" class="btn btn-primary"> <i class="fas fa-plus"></i> Add MatchDay Detail</a>
    <a asp-action="AddMatch" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-plus"></i> Add Match</a>
    <a asp-action="Details" asp-route-id="@Model.Season.Id" class="btn btn-success">Back to List</a>
</div>
<br />

@if (Model.MatchDayDetails.Count != 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Teams</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTableTeams">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().Team.LogoFullPath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().Team.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchesPlayed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchesWon)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchesTied)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchesLost)
                                </th>
                              @*  <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().Points)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().PointsFor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().PointsAgainst)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().PointsDifference)
                                </th>
                                <th width="100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MatchDayDetails
                          @*.OrderByDescending(g => g.Points)*@
                          .OrderByDescending(m => m.PointsDifference)
                          .ThenByDescending(m => m.PointsFor))
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Team.LogoFullPath))
                                        {
                                            <img src="@Url.Content(item.Team.LogoFullPath)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Team.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MatchesPlayed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MatchesWon)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MatchesTied)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MatchesLost)
                                    </td>
                                @*    <td>
                                        @Html.DisplayFor(modelItem => item.Points)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PointsFor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PointsAgainst)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PointsDifference)
                                    </td>
                                    <td>
                                        <a asp-action="EditMatchDayDetails" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<br />
@if (Model.MatchDayDetails.Count != 0 && Model.MatchDayDetails.FirstOrDefault().MatchDay.Matches.Count != 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Matches</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchDay.Matches.FirstOrDefault().Date)
                                </th>
                                <th>
                                    Local
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchDay.Matches.FirstOrDefault().PointsLocal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchDay.Matches.FirstOrDefault().PointsVisitor)
                                </th>
                                <th>
                                    Visitor
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MatchDayDetails.FirstOrDefault().MatchDay.Matches.FirstOrDefault().IsClosed)
                                </th>
                                <th width="150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MatchDayDetails.FirstOrDefault().MatchDay.Matches
                          .OrderBy(m => m.Date))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateLocal)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Local.LogoFullPath))
                                        {
                                            <img src="@Url.Content(item.Local.LogoFullPath)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PointsLocal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PointsVisitor)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Visitor.LogoFullPath))
                                        {
                                            <img src="@Url.Content(item.Visitor.LogoFullPath)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsClosed)
                                    </td>
                                    <td>
                                        <a asp-action="EditMatch" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                        <a asp-action="CloseMatch" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-align-justify"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItemMath" data-toggle="modal" data-target="#deleteDialog"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            var item_to_delete;
            var toDelete;

            $('.deleteItem').click((e) => {
                toDelete = 1;
                item_to_delete = e.currentTarget.dataset.id;
            });

            $('.deleteItemMath').click((e) => {
                toDelete = 2;
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                if (toDelete == 1) {
                    window.location.href = '/Seasons/DeleteMatchDayDetail/' + item_to_delete;
                } else {
                    window.location.href = '/Seasons/DeleteMatch/' + item_to_delete;
                }
            });
        });
    </script>
}
